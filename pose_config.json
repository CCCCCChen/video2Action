  "key_mapping": {
    "Jump": "space",
    "Landing": "space",
    "Move Right": "d",
    "Move Left": "a",
    "Move Forward": "w",
    "Move Backward": "s",
    "Idle": null
  },
  "display_settings": {
    "show_roi": true,
    "show_pose_landmarks": true,
    "show_camera_status": true,
    "show_statistics": true,
