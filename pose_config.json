{
  "model_settings": {
    "yolo_model_path": "yolov8n.pt",
    "video_path": "test.mp4",
    "confidence_threshold": 0.5
  },
  "roi_settings": {
    "center_region_ratio": 0.6,
    "roi_expand_ratio": 1.5,
    "kalman_q": 0.001,
    "kalman_r": 0.01
  },
  "optical_flow_settings": {
    "optical_flow_points": 100,
    "camera_move_threshold": 5.0,
    "lk_win_size": 15,
    "lk_max_level": 2,
    "feature_max_corners": 100,
    "feature_quality_level": 0.3,
    "feature_min_distance": 7
  },
  "action_detection": {
    "jump_threshold": 15,
    "move_threshold": 8,
    "idle_threshold": 3,
    "action_smooth_frames": 3,
